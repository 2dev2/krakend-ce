{
  "version": 2,
  "name": "edumarc API gateway",
  "port": 8080,
  "cache_ttl": "3600s",
  "timeout": "3s",
  "debug": false,
  "plugin": {
    "folder": "./cmd/apigw/plugins/",
    "pattern": ".so"
  },
  "extra_config": {
    "github_com/devopsfaith/krakend-gologging": {
      "level": "DEBUG",
      "prefix": "[KRAKEND]",
      "syslog": false,
      "stdout": true
    },
    "github_com/devopsfaith/krakend-opencensus": {
      "sample_rate": 100,
      "reporting_period": 10,
      "enabled_layers": {
        "backend": true,
        "router": true,
        "pipe": true
      },
      "exporters": {
        "prometheus": {
          "port": 9091
        }
      }
    },
    "github_com/devopsfaith/krakend-metrics": {
      "collection_time": "30s",
      "proxy_disabled": false,
      "router_disabled": false,
      "backend_disabled": false,
      "endpoint_disabled": false,
      "listen_address": ":8090"
    },
    "github_com/devopsfaith/krakend-cors": {
      "allow_origins": [
        "http://192.168.99.100:3000",
        "http://localhost:3000"
      ],
      "allow_methods": [
        "POST",
        "GET"
      ],
      "allow_headers": [
        "Origin",
        "Authorization",
        "Content-Type"
      ],
      "expose_headers": [
        "Content-Length"
      ],
      "max_age": "12h"
    },
    "github_com/devopsfaith/krakend-botdetector": {
      "cacheSize": 1000
    },
    "github_com/devopsfaith/krakend/transport/http/server/handler": {
      "name": [
        "router-plugin",
        "example-plugin",
        "short-proxy-plugin"
      ],
      "attachuserid": "rsc"
    }
  },
  "endpoints": [
    {
      "endpoint": "/demo",
      "method": "GET",
      "backend": [
        {
          "host": [
            "http://127.0.0.1:7775"
          ],
          "url_pattern": "v1/transaction/kkjchu492u4dp7ri6kt/7200184650"
        }
      ]
    },
    {
      "endpoint": "/abc",
      "method": "POST",
      "headers_to_pass": [
        "Authorization",
        "Content-Type"
      ],
      "backend": [
        {
          "host": [
            "http://127.0.0.1:8000"
          ],
          "url_pattern": "/__debug/supu"
        },
        {
          "url_pattern": "/__debug/abc"
        }
      ]
    },
    {
      "endpoint": "/metrics",
      "method": "GET",
      "headers_to_pass": [
        "Authorization",
        "Content-Type",
        "apiKey"
      ],
      "backend": [
        {
          "url_pattern": "/edc.dlr.DlrService/Read",
          "method": "POST",
          "host": [
            "http://127.0.0.1:7774"
          ],
          "extra_config": {
            "github.com/devopsfaith/krakend/http": {
              "return_error_details": "backend_alias"
            }
          },
          "deny": [
            "internal"
          ]
        },
        {
          "url_pattern": "/__debug/abc"
        }
      ]
    },
    {
      "endpoint": "/short/{shortUrl}",
      "method": "GET",
      "headers_to_pass": [
        "Content-Type"
      ],
      "querystring_params": [
        "*"
      ],
      "backend": [
        {
          "url_pattern": "/edc.short.ShortService/Read",
          "method": "POST",
          "host": [
            "http://127.0.0.1:7774"
          ],
          "extra_config": {
            "github.com/devopsfaith/krakend-martian": {
              "fifo.Group": {
                "scope": [
                  "request",
                  "response"
                ],
                "aggregateErrors": true,
                "modifiers": [
                  {
                    "body.Modifier": {
                      "scope": [
                        "request",
                        "response"
                      ],
                      "contentType": "application/json",
                      "body": "eyJtc2ciOiJ5b3Ugcm9jayEifQ=="
                    }
                  },
                  {
                    "header.Modifier": {
                      "scope": [
                        "request",
                        "response"
                      ],
                      "name": "Content-Type",
                      "value": "application/json"
                    }
                  }
                ]
              }
            },
            "github.com/devopsfaith/krakend/http": {
              "return_error_details": "backend_alias"
            },
            "github_com/devopsfaith/krakend/transport/http/server/handler": {
              "name": "short-proxy-plugin"
            }
          },
          "deny": [
            "internal"
          ]
        },
        {
          "url_pattern": "/__debug/short/{shortUrl}"
        }
      ]
    },
    {
      "endpoint": "/test2",
      "method": "GET",
      "headers_to_pass": [
        "Authorization",
        "Content-Type"
      ],
      "backend": [
        {
          "host": [
            "http://127.0.0.1:8000"
          ],
          "url_pattern": "/__debug/supu",
          "extra_config": {
            "github.com/devopsfaith/krakend-martian": {
              "fifo.Group": {
                "scope": [
                  "request",
                  "response"
                ],
                "aggregateErrors": true,
                "modifiers": [
                  {
                    "header.Modifier": {
                      "scope": [
                        "request",
                        "response"
                      ],
                      "name": "X-Martian",
                      "value": "ouh yeah!"
                    }
                  },
                  {
                    "header.RegexFilter": {
                      "scope": [
                        "request"
                      ],
                      "header": "X-Neptunian",
                      "regex": "no!",
                      "modifier": {
                        "header.Modifier": {
                          "scope": [
                            "request"
                          ],
                          "name": "X-Martian-New",
                          "value": "some value"
                        }
                      }
                    }
                  }
                ]
              }
            },
            "github.com/devopsfaith/krakend-circuitbreaker/gobreaker": {
              "interval": 60,
              "timeout": 10,
              "maxErrors": 1
            }
          }
        }
      ]
    }
  ]
}
